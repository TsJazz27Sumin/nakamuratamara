@media screen and (min-width:1000px) {
    
    body {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
        align-items: center;

        .title {
            font-size: 1.75rem;
            margin-bottom: 1rem!important;
            font-weight: 400!important;
        }

        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;

            input {
                margin-bottom: -1px;
                border-bottom-right-radius: 0;
                border-bottom-left-radius: 0;

                .form-control {
                    position: relative;
                    box-sizing: border-box;
                    height: auto;
                    padding: 10px;
                    font-size: 16px;
                }
            }

            .button-sakura{
                color: #ffffff;
                background-color: rgb(255, 51, 102);
                border-color: #ffdbed;
            }
        }
    }
}

@media screen and (max-width:999px) {

    body {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
        align-items: center;

        .title {
            font-size: 5rem;
            margin-bottom: 1rem!important;
            font-weight: 400!important;
        }

        .form-signin {
            padding: 15px;
            margin: auto;

            input {
                margin-bottom: -1px;
                border-bottom-right-radius: 0;
                border-bottom-left-radius: 0;
                height: 5rem;
                font-size: 32px;

                .form-control {
                    position: relative;
                    box-sizing: border-box;
                    height: auto;
                    padding: 10px;
                }
            }

            .button-sakura{
                color: #ffffff;
                background-color: rgb(255, 51, 102);
                border-color: #ffdbed;
                height: 5rem;
                font-size: 32px;
            }
        }
    }
}


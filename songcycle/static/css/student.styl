/*
 * Globals
 */

/* Links */
a,
a:focus,
a:hover {
  color: #212529;
}

/*
 * Base structure
 */

html,
body {
  height: 100%;
}

body {
  display: -ms-flexbox;
  display: flex;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", YuGothic, "ヒラギノ角ゴ ProN W3", Hiragino Kaku Gothic ProN, Arial, "メイリオ", Meiryo, sans-serif;
}

.cover-heading {
  margin: 60px;
}

.cover-container {
  height: 80%;
}

/*
 * Header
 */
.masthead {
  margin-bottom: 2rem;
}

.masthead-brand {
  margin-bottom: 0;
  color: #212529;
}

.nav-masthead .nav-link {
  padding: .25rem 0;
  font-weight: 700;
  color: #B5BABF;
  background-color: transparent;
  border-bottom: .25rem solid transparent;
}

.active {
  color: #212529;
}

.nav-masthead .nav-link:hover,
.nav-masthead .nav-link:focus {
  border-bottom-color: rgba(255, 255, 255, .25);
}

.nav-masthead .nav-link + .nav-link {
  margin-left: 1rem;
}

@media (min-width: 48em) {
  .masthead-brand {
    float: left;
  }
  .nav-masthead {
    float: right;
    margin-top: 3px;
  }
}

@media screen and (min-width:1000px) {
  .cover {
    padding: 9rem;
    color: #212529;
  }

  .student-lead{
        font-size: 1.25rem;
        font-weight: 300;
    }
}

@media screen and (max-width:999px) {
  .cover {
    color: #212529;
    padding-top: 5rem;
    padding-bottom: 5rem;
  }

  .student-lead{
      font-size: 0.75rem;
      font-weight: 300;
  }
}


.cover-search-area {
  padding-top: 8rem;
  padding-bottom: 0.1rem;
  padding-left: 3rem;
  padding-right: 3rem;
}

.cover-search-result-only {
  padding-left: 3rem;
  padding-right: 3rem;
}

.cover .btn-lg {
  padding: .75rem 1.25rem;
  font-weight: 700;
}


/*
 * Footer
 */
.mastfoot {
  color: #212529;
}

.overlay {
  width: 100%;
  height: 100%;
  background: #808284;
  z-index: 1;
  pointer-events: none;
 }

 .disable-button {
  background: #616366;
 }

 .button-chinese-pink{
  color: #ffffff;
  background-color: #f9c1cf;
  border-color: #f9c1cf;
 }

 .button-royal-blue{
  color: #4169e1;
  background-color: #fff;
  border-color: #4169e1;
 }

 .button-dark-blue{
  color: #204ac8;
  background-color: #fff;
  border-color: #204ac8;
 }

 .student-table{
  background-color: #ffffff !important;
 }

 .student-table thead th {
  background-color:#fff !important;
  color: #212529;
  vertical-align: bottom;
  border-bottom: #ffdbed;

  /* 縦スクロール時に固定する */
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  /* tbody内のセルより手前に表示する */
  z-index: 1;
}

.table td, .table th {
  padding: .75rem;
  vertical-align: top;
  border-top: 1px solid #ffdbed;
}

.search-button-sakura{
    color: #ffffff;
    background-color: rgb(255, 51, 102);
    border-color: #ffdbed;
    width: 130px;
    padding: 0.65rem;
}